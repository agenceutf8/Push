{% extends "base.html" %}
{% block title %}L'application{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Push Admin Panel</h1>
            {% if error %}
            <div class="alert alert-danger">
                <strong>Nom d'utilisateur ou mot de passe incorrect!</strong> {{ error }}
            </div>
            {% endif %}
            <div class="account-wall">
                <form class="form-signin" role="form" action="{{ path('login_check') }}" method="post">
                    <input type="text" name="_username" class="form-control" placeholder="Nom d'utilisateur" required autofocus>
                    <input type="password" name="_password"class="form-control" placeholder="Mot de passe" required>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">
                        Connexion
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}